<mvc:View controllerName="myskillsapp.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
	xmlns:t="sap.ui.table"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
    xmlns:f="sap.f"
    xmlns:tnt="sap.tnt"
	xmlns:core="sap.ui.core"
    xmlns:c="sap.suite.ui.microchart">

	
    <f:DynamicPage id="page" title="{i18n>title}">
        <f:content >
     <tnt:ToolPage id="toolPage" >
	   
		<tnt:header >
		    
			<f:ShellBar id="_IDGenShellBar1" title="My Skills App"
				
				showMenuButton="true"
				homeIcon="https://upload.wikimedia.org/wikipedia/commons/9/9f/LTIMindtree_Logo.svg"
				showCopilot="false"
				showNotifications="false"
				menuButtonPressed="onMenuButtonPress"
				notificationsNumber="2">
				
			   <f:profile>
			    <Avatar initials="{EmployeeModel>/employee_name}"/>
				
		       </f:profile>
			</f:ShellBar>
		</tnt:header>
		<tnt:sideContent>

			    <tnt:SideNavigation id="sideNavigation" selectedKey="walked" >

					<tnt:NavigationList id="_Iist1">

					  <tnt:NavigationListItem id="_Ism1" text="My Profile" icon="sap-icon://employee"  />

                      <tnt:NavigationListItem id="item1" text="Skill Screener" icon="sap-icon://people-connected" />

					  <tnt:NavigationListGroup id="grp1"  text="Learning Hub" >
						  <tnt:NavigationListItem id="grp2" text="Training" icon="sap-icon://learning-assistant"  />
						  <tnt:NavigationListItem id="grp3" text="Certifications" icon="sap-icon://validate"/>
						  <tnt:NavigationListItem id="grp10" text="Certification Report" icon="sap-icon://clinical-task-tracker"  />
						  <tnt:NavigationListItem id="grp11" text="Training Course Master" icon="sap-icon://learning-assistant"/>
					  </tnt:NavigationListGroup>

					  <tnt:NavigationListGroup id="grp4"  text="Recruitment">
						  <tnt:NavigationListItem id="grp5" text="Planel Slot Booking" icon="sap-icon://retail-store-manager"  />
					  </tnt:NavigationListGroup>
					  
					   <tnt:NavigationListGroup id="grp7"  text="Reports">
						  <tnt:NavigationListItem id="grp8" text="Adoption Status" icon="sap-icon://document-text"  />
					  </tnt:NavigationListGroup>
                        
					</tnt:NavigationList>
		
				</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer id="pageContainer" initialPage="page2" >
			    <pages>
					
				  <ScrollContainer id="page2" horizontal="false" vertical="true" height="100%">

					    <VBox id="vbox2" class="sapUiSmallMargin" >
				            <form:SimpleForm id="SimpleFormDisplayColumn_threeGroups234"
		 				 	    editable="false"
							 	layout="ColumnLayout"
							
						 		columnsM="2"
					 			columnsL="4"
						 		columnsXL="5">
			
								<Label id="_IDGenLabel2" text="PS No.">
								   <layoutData>
                                      <form:ColumnElementData cellsSmall="5" />
                                  </layoutData>
                               </Label>
								<Text id="nameText" text="{EmployeeModel>/PS_NO}" >
								 <layoutData>
     							     <form:ColumnElementData cellsSmall="6" cellsLarge="6" />
     							    </layoutData>
     							   </Text>
								<Label id="_IDGenLabel3" text="Location" >
								   <layoutData>
                                      <form:ColumnElementData cellsSmall="5" />
                                    </layoutData>
                                </Label>
								<Text id="_IDGenText2" text=" {EmployeeModel>/base_location}" >
								 <layoutData>
       							   <form:ColumnElementData cellsSmall="6" cellsLarge="6" />
       							  </layoutData>
       							 </Text>
								<Label id="_IDGenLabel4" text="Primary JSC">
								  <layoutData>
                                      <form:ColumnElementData cellsSmall="5" />
                                  </layoutData>
                               </Label>
								<Text id="_IDGenText3" text="{EmployeeModel>/practice}" >
								 <layoutData>
      								    <form:ColumnElementData cellsSmall="6" cellsLarge="6" />
     								    </layoutData>
     								   </Text>
								<Label id="_IDGenLabel5" text="Country" >
								  <layoutData>
      							     <form:ColumnElementData cellsSmall="5" />
      							   </layoutData>
      							</Label>
								<Text id="countryText" text="{EmployeeModel>/deputed_country}" >
								 <layoutData>
       								   <form:ColumnElementData cellsSmall="6" cellsLarge="6" />
       								  </layoutData>
       								 </Text>
								
				
								<Label id="_IDGenLabel7" text="Customer Name" >
								 <layoutData>
         							 <form:ColumnElementData cellsSmall="5" />
         							</layoutData>
       							 </Label>
								<Text id="_IDGenText4" text="{EmployeeModel>/customer_name}" >
								 <layoutData>
     							     <form:ColumnElementData cellsSmall="6" cellsLarge="6" />
    							     </layoutData>
     							   </Text>

								<Label id="_IDGenLabel8" text="Project Name" >
								 <layoutData>
         							 <form:ColumnElementData cellsSmall="5" />
        							 </layoutData>
       							 </Label>
								<Text id="_IDGenText5" text="{EmployeeModel>/project_name}" >
								 <layoutData>
         							 <form:ColumnElementData cellsSmall="6" cellsLarge="6" />
        							 </layoutData>
       							 </Text>

								<Label id="_IDGenLabel9" text="Secondary JSC" >
								 <layoutData>
        							  <form:ColumnElementData cellsSmall="5" />
       							 </layoutData>
      							</Label>
								<Text id="_IDGenText6" text="{EmployeeModel>/sub_practice}" >
								 <layoutData>
        							  <form:ColumnElementData cellsSmall="6" cellsLarge="6" />
        							 </layoutData>
        							</Text>
				
								<Label id="_IDGenLabel10" text="LTIMindtree Exp" >
								   <layoutData>
        						      <form:ColumnElementData cellsSmall="5" />
        						   </layoutData>
        						</Label>
								<Text id="_IDGenText7" text="{EmployeeModel>/lti_experience}" >
								 <layoutData>
        							  <form:ColumnElementData cellsSmall="6" cellsLarge="6" />
        							 </layoutData>
       							 </Text>

								<Label id="_IDGenLabel11" text="Total Exp" >
								   <layoutData>
        								  <form:ColumnElementData cellsSmall="5" />
        						  </layoutData>
       							 </Label>  
								<Text id="_IDGenText8" text="{EmployeeModel>/total_experience}" >
								 <layoutData>
       							   <form:ColumnElementData cellsSmall="6" cellsLarge="6" />
       							  </layoutData>
       							 </Text>

								<Label id="_IDGenLabel12" text="Project JSC" >
								 <layoutData>
       							    <form:ColumnElementData cellsSmall="5" />
       							   </layoutData>
       							  </Label>
								<Text id="_IDGenText9" text="{EmployeeModel>/PS_NO}" >
								 <layoutData>
        							  <form:ColumnElementData cellsSmall="6" cellsLarge="6" />
        							 </layoutData>
       							 </Text>
								
			
		       			    </form:SimpleForm>
	       				</VBox>

           		        <IconTabBar id="_IDGenIconTabBar1"> 
							<items>
								<IconTabFilter id="_IDGenIconTabFilter1"
									key="skills"
									icon="sap-icon://tree"
									text="Skills">
                                       
                                         <!-- {path:'EmployeeModel>/', parameters:{expand: 'employee_cluster'}} -->

								  <VBox id="vbox1">	
				                       <t:TreeTable
                   						 id="TreeTableBasic"
                   						  rows="{path: 'EmployeeModel>/employee_cluster/results/0/cluster_array/' , parameters:{expand: 'employee_skill', arrayName: 'results'}}"
                   						 selectionMode="MultiToggle"
                  						 enableSelectAll="true"
                  						 ariaLabelledBy="title"
										  >
                                           <t:extension>
                                              <OverflowToolbar style="Clear">
                                                 <Title id="title" text=" "/>
												 
                        						 <ToolbarSpacer/>
												 <!-- <SearchField width="20%" search=".handleSearch" /> -->
												
                        						 <Button text="Expand first level" press="onExpandFirstLevel"/>
												 <Button text="Expand selection" press="onExpandSelection"/>
												 <Button text="Collapse all" press="onCollapseAll"/>
												 <Button text="Collapse selection" press="onCollapseSelection"/>
												
												  <Button id="save_btn" 
											  		 type="Emphasized"
											   		 text="Save"
											  		 press="onSaveChanges"
													 tooltip="save changes"
											  		 ariaDescribedBy="acceptButtonDescription genericButtonDescription" 
													 >
                							  		  <layoutData>
                							  		              <FlexItemData id="FlexItemData1"/>
                							  		  </layoutData>
                								  </Button>
												  <Button id="vedit" icon="" text="Add" press="onAdd" tooltip="Add skills"  type="Emphasized" ></Button>
							 				     <Button id="cancel_btn" 
                								       type="Emphasized" 
                								       text="Cancel" 
                								       press=".onCancel" 
                								       ariaDescribedBy="rejectButtonDescription genericButtonDescription"
													   >
                								          <layoutData>
                								              <FlexItemData id="_IDGenFlexItemData2" />
                								           </layoutData>
                                           	       </Button>
												  <Button id="delbtn" class="sapUiSmallMarginBeginEnd"  icon="sap-icon://delete" type="Reject" text="" press=".onDelete"/>
												
                                                </OverflowToolbar>
                                          </t:extension>
                                          <t:columns>
                    							<t:Column >
                    							    <Label text="Leaf Skill" />
                    							    <t:template>
                    							       <Text text="{EmployeeModel>skill} {EmployeeModel>clust_JSC}" wrapping="false" />
                    							    </t:template>
                    							</t:Column>
                    							<t:Column >
                    							    <Label text="Rate your Skill"/>
                    							    <t:template>
                    							       <RatingIndicator id="RI_M" maxValue="5" class="sapUiSmallMarginBottom" value="{EmployeeModel>rating}" visible="{= ${EmployeeModel>rating} === undefined ? false : true}" iconSize="22px" tooltip="Rating Tooltip" />
                    							    </t:template>
                   							   </t:Column>
                   							   <t:Column >
                   							     <Label text="Experience in Respective Skill" />
                   							     <t:template>
                   							        <HBox>
													      <VBox>
													       <Label text="in years" textAlign="Center" visible="{= ${EmployeeModel>exp_years} === undefined ? false : true}" labelFor="exp_yrs" />
															<StepInput
																id="exp_yrs"
																valueStateText="in years"
																width="10%"
																value="{EmployeeModel>exp_years}"
																visible="{= ${EmployeeModel>exp_years} === undefined ? false : true}" 
																valueState="{None}"/>
														    </VBox>		
															<VBox>
													        <Label text="in months" visible="{= ${EmployeeModel>exp_months} === undefined ? false : true}" labelFor="exp_mths" />
															<StepInput
																id="exp_mths"
																width="10%"
																value="{EmployeeModel>exp_months}"
																visible="{= ${EmployeeModel>exp_months} === undefined ? false : true}" 
																valueState="{valueState}"/>
													       </VBox>
													</HBox>
                   							     </t:template>
                   							   </t:Column>
                							</t:columns>
                                      </t:TreeTable>
	   					      	  </VBox>

					           </IconTabFilter>

					            <IconTabFilter id="_IDGenIconTabFilter2"
									key="experience"
									icon="sap-icon://suitcase"
									text="Experience"
									count="6"
									>
									<customData>
						               <BadgeCustomData visible="true"/>
					                </customData>
									
									  <items>
					                        <IconTabFilter text="Industry Experience">
											  <Title text="INDUSTRY EXPERIENCE"/> 
						                       <t:TreeTable
                   								 id="TreeTableBasic2"
                   								  rows=""
                   								 selectionMode="MultiToggle"
                  								 enableSelectAll="true"
                  								 ariaLabelledBy="title"
												>
												  
                                                 <t:extension>
                                                  <OverflowToolbar style="Clear">
                                                
                        						 <ToolbarSpacer/>
												  <Button id="vedit_exp" icon="sap-icon://edit"  press="onvEdit" tooltip="Edit"  type="Emphasized" ></Button>
							 					 
                                                   </OverflowToolbar>
                                                  </t:extension>
                                          			<t:columns>
                    										<t:Column >
                    										    <Label text="Industry" />
                    										    <t:template>
                    										       <Text text=" " wrapping="false" />
                    										    </t:template>
                    										</t:Column>
                    										<t:Column >
                    										    <Label text="Experience in Respective Industry"/>
                    										    <t:template>
                    										       <Text text=" " wrapping="false" />
                    										    </t:template>
                   										   </t:Column>
                   							   
                										</t:columns>
                                                 </t:TreeTable> 
					                      </IconTabFilter>

										  <IconTabFilter text="Customer Experience">
										          <Title text=" KEY CUSTOMER EXPERIENCE"/> 
												 <form:SimpleForm>
												        
												        <FlexBox width="40rem" height="22rem" alignItems="Center" class="sapUiSmallMargin">
															<items>
																<c:InteractiveLineChart selectionChanged="selectionChanged" press="press" precedingPoint="15"
																					  succeedingPoint="89">
																	<c:points>
																	    
																		<c:InteractiveLineChartPoint value="33.1" label="May" secondaryLabel="Q2"/>
																		<c:InteractiveLineChartPoint value="12" label="June"/>
																		<c:InteractiveLineChartPoint value="51.4" label="July" secondaryLabel="Q3"/>
																		<c:InteractiveLineChartPoint value="52" label="Aug"/>
																		<c:InteractiveLineChartPoint value="69.9" label="Sep"/>
																		<c:InteractiveLineChartPoint value="0.9" label="Oct" secondaryLabel="Q4"/>
																	</c:points>
																</c:InteractiveLineChart>
															</items>

														</FlexBox>
												 </form:SimpleForm>
										  </IconTabFilter>

											<IconTabFilter text="Product Experience">
												<Title text=" PRODUCT EXPERIENCE"/> 
											</IconTabFilter>

											<IconTabFilter text="SAP/NON SAP Product Experience">
												<Title text="SAP/ NON SAP PRODUCT EXPERIENCE"/> 
											</IconTabFilter>

											<IconTabFilter text="Language ProfIciency">
												<Title text="LANGUAGE PROFICIENCY"/> 
											</IconTabFilter>

											<IconTabFilter text="Onsite Country Experience">
					                          	<Title text="ONSITE COUNTRY EXPERIENCE"/> 
											</IconTabFilter>
										</items>
									
					
				     			</IconTabFilter>

					  		   <IconTabFilter id="_IDGenIconTabFilter3"
									key="cv"
									icon="sap-icon://document"
									text="CV">
								    <FeedInput id="_IDGenFeedInput1" />
					           </IconTabFilter>
				           </items>
			           </IconTabBar>
				  </ScrollContainer>
					
				</pages>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
	 </f:content>
    </f:DynamicPage>

</mvc:View>

