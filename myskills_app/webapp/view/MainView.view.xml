<mvc:View controllerName="myskillsapp.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
	xmlns:t="sap.ui.table"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
    xmlns:f="sap.f"
    xmlns:tnt="sap.tnt">
    <f:DynamicPage id="page" title="{i18n>title}">
        <f:content >
     <tnt:ToolPage id="toolPage">
		<tnt:header >
		
			<f:ShellBar id="_IDGenShellBar1" title="My Skills App"
				
				showMenuButton="true"
				homeIcon="./resources/sap/ui/documentation/sdk/images/logo_sap.png"
				showCopilot="false"
				showNotifications="false"
				menuButtonPressed="onMenuButtonPress"
				notificationsNumber="2">
			   <f:profile>
			    <Avatar initials="UI"/>
		       </f:profile>
			</f:ShellBar>
		</tnt:header>
		<tnt:sideContent>
		 
			    <tnt:SideNavigation id="sideNavigation" selectedKey="walked" >
                   
					 
					<tnt:NavigationList id="_Iist1">
					    
					  <tnt:NavigationListItem id="_Ism1" text="My Profile" icon="sap-icon://employee"  />

                      <tnt:NavigationListItem id="item1" text="Skill Screener" icon="sap-icon://people-connected" />

					  <tnt:NavigationListGroup id="grp1"  text="Learning Hub"  >
						  <tnt:NavigationListItem id="grp2" text="Training" icon="sap-icon://learning-assistant"  />
						  <tnt:NavigationListItem id="grp3" text="Certifications" icon="sap-icon://validate"/>
						  <tnt:NavigationListItem id="grp10" text="Certification Report" icon="sap-icon://clinical-task-tracker"  />
						  <tnt:NavigationListItem id="grp11" text="Training Course Master" icon="sap-icon://learning-assistant"/>
					  </tnt:NavigationListGroup>

					  <tnt:NavigationListGroup id="grp4"  text="Recruitment">
						  <tnt:NavigationListItem id="grp5" text="Planel Slot Booking" icon="sap-icon://retail-store-manager"  />
					  </tnt:NavigationListGroup>
					  
					   <tnt:NavigationListGroup id="grp7"  text="Reports">
						  <tnt:NavigationListItem id="grp8" text="Adoption Status" icon="sap-icon://document-text"  />
					  </tnt:NavigationListGroup>
                        
					</tnt:NavigationList>
		
				</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer id="pageContainer" initialPage="page2" >
			    <pages>
					
				  <ScrollContainer id="page2" horizontal="false" vertical="true" height="100%">

					    <VBox id="vbox2" class="sapUiSmallMargin" >
				            <form:SimpleForm id="SimpleFormDisplayColumn_threeGroups234"
		 				 	    editable="false"
							 	layout="ColumnLayout"
							
						 		columnsM="2"
					 			columnsL="4"
						 		columnsXL="5">
			
								<Label id="_IDGenLabel2" text="PS No." />
								<Text id="nameText" text="{Employees>/PS_NO}" />
								<Label id="_IDGenLabel3" text="Location" />
								<Text id="_IDGenText2" text=" {Employees>/base_location}" />
								<Label id="_IDGenLabel4" text="Primary JSC" />
								<Text id="_IDGenText3" text="{Employees>/practice}" />
								<Label id="_IDGenLabel5" text="Country" />
								<Text id="countryText" text="{Employees>/deputed_country}" />
								
				
								<Label id="_IDGenLabel7" text="Customer Name" />
								<Text id="_IDGenText4" text="{Employees>/customer_name}" />
								<Label id="_IDGenLabel8" text="Project Name" />
								<Text id="_IDGenText5" text="{Employees>/project_name}" />
								<Label id="_IDGenLabel9" text="Secondary JSC" />
								<Text id="_IDGenText6" text="{Employees>/sub_practice}" />
				
								<Label id="_IDGenLabel10" text="LTIMindtree Exp" />
								<Text id="_IDGenText7" text="{Employees>/lti_experience}" />
								<Label id="_IDGenLabel11" text="Total Exp" />
								<Text id="_IDGenText8" text="{Employees>/total_experience}" />
								<Label id="_IDGenLabel12" text="Project JSC" />
								<Text id="_IDGenText9" text="{Employees>/PS_NO}" />
								
			
		       			    </form:SimpleForm>
	       				</VBox>

           		        <IconTabBar id="_IDGenIconTabBar1"> 
							<items>
								<IconTabFilter id="_IDGenIconTabFilter1"
									key="skills"
									icon="sap-icon://tree"
									text="Skills">
                                       
                                         <!-- {path:'Employees>/', parameters:{expand: 'employee_cluster'}} -->

								  <VBox id="vbox1">	
				                       <t:TreeTable
                   						 id="TreeTableBasic"
                   						  rows="{path: 'Employees>/employee_cluster/results/0/cluster_array/' , parameters:{expand: 'employee_skill', arrayName: 'results'}}"
                   						 selectionMode="MultiToggle"
                  						 enableSelectAll="true"
                  						 ariaLabelledBy="title"
										  >
                                           <t:extension>
                                              <OverflowToolbar style="Clear">
                                                 <Title id="title" text=" "/>
												 
                        						 <ToolbarSpacer/>
												  <Button id="vedit" icon="sap-icon://edit" text="Edit Skills" press="onvEdit" tooltip="Edit skills"  type="Emphasized" ></Button>
							 					 <Button text="Collapse selection" press="onCollapseSelection"/>
                        						 <Button text="Expand first level" press="onExpandFirstLevel"/>
												 <Button id="delbtn" class="sapUiSmallMarginBeginEnd"  icon="sap-icon://delete" text="Delete" press=".onDelete"/>
												
												 <!-- <Button id="_IDGenButton2" 
											  		 type="Accept"
											   		 text="Save"
											  		 press="savedata"
											  		 ariaDescribedBy="acceptButtonDescription genericButtonDescription" >
                							  		  <layoutData>
                							  		              <FlexItemData id="FlexItemData1"/>
                							  		  </layoutData>
                								  </Button> -->
                								  <!-- <Button id="_IDGenButton23" 
                								       type="Reject" 
                								       text="Cancel" 
                								       press="oncancel" 
                								       ariaDescribedBy="rejectButtonDescription genericButtonDescription">
                								          <layoutData>
                								              <FlexItemData id="_IDGenFlexItemData2" />
                								           </layoutData>
                                           	       </Button> -->
                       
                                                </OverflowToolbar>
                                          </t:extension>
                                          <t:columns>
                    							<t:Column>
                    							    <Label text="Leaf Skill"/>
                    							    <t:template>
                    							       <Text text="{Employees>skill} {Employees>clust_JSC}" wrapping="false" />
                    							    </t:template>
                    							</t:Column>
                    							<t:Column >
                    							    <Label text="Rate your Skill"/>
                    							    <t:template>
                    							       <RatingIndicator id="RI_M" maxValue="5" class="sapUiSmallMarginBottom" value="{Employees>rating}" visible="{= ${Employees>rating} === undefined ? false : true}" iconSize="22px" tooltip="Rating Tooltip" />
                    							    </t:template>
                   							   </t:Column>
                   							   <t:Column >
                   							     <Label text="Experience in Respective Skill" />
                   							     <t:template>
                   							        <HBox>
													      <VBox>
													       <Label text="in years" textAlign="Center" visible="{= ${Employees>exp_years} === undefined ? false : true}" labelFor="exp_yrs" />
															<StepInput
																id="exp_yrs"
																valueStateText="in years"
																width="10%"
																value="{Employees>exp_years}"
																visible="{= ${Employees>exp_years} === undefined ? false : true}" 
																valueState="{None}"/>
														    </VBox>		
															<VBox>
													        <Label text="in months" visible="{= ${Employees>exp_months} === undefined ? false : true}" labelFor="exp_mths" />
															<StepInput
																id="exp_mths"
																width="10%"
																value="{Employees>exp_months}"
																visible="{= ${Employees>exp_months} === undefined ? false : true}" 
																valueState="{valueState}"/>
													       </VBox>
													</HBox>
                   							     </t:template>
                   							   </t:Column>
                							</t:columns>
                                      </t:TreeTable>
	   					      	  </VBox>

					           </IconTabFilter>

					            <IconTabFilter id="_IDGenIconTabFilter2"
									key="experience"
									icon="sap-icon://suitcase"
									text="Experience">
									<!-- <List id="_IDGenList1" headerText="A List" showSeparators="Inner" >
									</List> -->
									
									<GenericTile id="_IDGenGenericTile1"
								 	    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
								 	    header="INDUSTRY EXPERIENCE" 
								 	    press="onPress"
		                                frameType="TwoByOne" 
									    subheader="Subtitle"
										>
										
		                             <TileContent id="_IDGenTileContent1">
			
		                             </TileContent>
	                            	</GenericTile>

									<GenericTile id="_IDGenGenericTile2" 
									    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
									    header="KEY CUSTOMER EXPERIENCE"
										subheader="Subtitle" 
										press="press"
										frameType= "TwoByOne">
										<TileContent id="_IDGenTileContent2" />
									</GenericTile>
					
				     			</IconTabFilter>

					  		   <IconTabFilter id="_IDGenIconTabFilter3"
									key="cv"
									icon="sap-icon://document"
									text="CV">
								    <FeedInput id="_IDGenFeedInput1" />
					           </IconTabFilter>
				           </items>
			           </IconTabBar>
				  </ScrollContainer>
					
				</pages>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
	 </f:content>
    </f:DynamicPage>

</mvc:View>

